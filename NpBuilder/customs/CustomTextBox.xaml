<UserControl x:Class="NpBuilder.customs.CustomTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NpBuilder.customs"
             mc:Ignorable="d" 
             Background="#323337"
             BorderThickness="1"
             BorderBrush="#2B2B2B"
             Margin="10,0,0,0"
           >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="tbname" Text="Hello"  Grid.Column="0" Foreground="Gray" FontSize="12" FontWeight="Medium"  VerticalAlignment="Center" Margin="5,0,5,0" />
        <TextBox  x:Name="tbinput" Background="#323337" FontSize="12" MinWidth="100" Grid.Column="1" Foreground="DarkGray" FontWeight="Medium"   VerticalContentAlignment="Center" BorderBrush="#2B2B2B" BorderThickness="1" />
    </Grid>
</UserControl>
