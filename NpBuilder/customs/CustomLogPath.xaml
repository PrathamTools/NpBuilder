<UserControl x:Class="NpBuilder.customs.CustomLogPath"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
   xmlns:local="clr-namespace:NpBuilder.customs"
           
             Margin="10,0,0,0"
             mc:Ignorable="d" 
                        Background="#323337"
             BorderThickness="1"
             BorderBrush="#2B2B2B"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="Auto"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="pathfor"  Grid.Column="0" Foreground="Gray" FontSize="12" FontWeight="Medium"  VerticalAlignment="Center" Margin="5,0,5,0" />
        <TextBox x:Name="selected_path" Width="30" Background="#323337" FontSize="13" Grid.Column="1" Foreground="#A9A9A9"  VerticalContentAlignment="Center" BorderBrush="#2B2B2B" BorderThickness="1" />
        <Image  Width="20" Height="20" Grid.Column="2" Margin="0,0,5,0" MouseLeftButtonDown="Image_MouseLeftButtonDown" Source="/customs/‎file.png"/>
    </Grid>
</UserControl>