<Window x:Class="NpBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
        xmlns:local="clr-namespace:NpBuilder"
        mc:Ignorable="d"
               MaxHeight="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}"
       WindowState="Maximized"
WindowStyle="None"
Background="#FF1A1A1A"
ResizeMode="NoResize"
AllowsTransparency="True"
Height="600"
Width="920">

    <Window.Resources>
        <Style x:Key="WindowButton" TargetType="Button">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>

            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <!-- Ensures TabControl fills available space -->

        </Grid.RowDefinitions>


        <DockPanel Background="#1E1E1E" Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="5,5,5,5">
                <Image Source="Assets\AppIconMain.png" Width="24" Margin="5,0,0,0"  Height="25" />
                <TextBlock Text="NP Builder" FontSize="18" Foreground="White" Margin="9,0,0,0" VerticalAlignment="Center"/>
                <Button Content="Home" x:Name="home_button"  Margin="15,0,5,0" Foreground="White" FontSize="18" Background="Transparent" BorderBrush="Transparent" Click="home_button_Click"/>
                <Button Content="Decoupled" x:Name="decouple_button"   Margin="10,0,5,0" Foreground="Gray" FontSize="18" Background="Transparent" BorderBrush="Transparent" Click="decouple_button_Click"   />
                <Button Content="File" x:Name="file_button"   Margin="10,0,5,0" Foreground="Gray" FontSize="18" Background="Transparent" BorderBrush="Transparent" Click="file_button_Click"  />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Click="Minimize_Click" Padding="15,0,15,0"  Style="{StaticResource WindowButton}" >
                    <Image Source="Assets/minus.png" MaxHeight="14"  MaxWidth="14"/>
                </Button>

                <Button Click="Close_Click" Padding="15,0,15,0" Style="{StaticResource WindowButton}">
                    <Image Source="Assets/xbutton.png" MaxHeight="13" MaxWidth="13"/>
                </Button>
            </StackPanel>
        </DockPanel>

        <Grid  Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="365*"/>
                <ColumnDefinition Width="187*"/>
                <ColumnDefinition Width="368*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="versionupdate"  FontSize="16" Foreground="#FF646464" Margin="0,10,0,0" Padding="20,3,20,3" Background="#FF1E1E1E" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="2"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" x:Name="hometabmenu"  Visibility="Visible"  Grid.Column="0" Grid.ColumnSpan="2">

                <TextBlock x:Name="contentTB" Text="Desktop Load :" FontSize="16" Foreground="#FFAEAEAE" Padding="10,3,10,3" Background="#FF1E1E1E"/>

                <StackPanel x:Name="posdataboxpath" Orientation="Horizontal"/>
                <Button x:Name="startCreateBuild" Padding="5" Background="Transparent" BorderBrush="#FF323337" Margin="20,0,0,0" Visibility="Visible" Click="startCreateBuild_Click"  >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/play.png" Width="15" Height="15"/>
                        <TextBlock Text="Create" Foreground="White" FontSize="14" Margin="5,0,5,0"/>
                    </StackPanel>
                </Button>

                <Button x:Name="startDownloadBuild" Padding="5" Background="Transparent" BorderBrush="#FF323337" Margin="20,0,0,0" Visibility="Collapsed"  >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/play.png" Width="15" Height="15"/>
                        <TextBlock Text="Download" Foreground="White" FontSize="14" Margin="5,0,5,0"/>
                    </StackPanel>
                </Button>

                <Button x:Name="startRunBuild" Padding="5" Background="Transparent" BorderBrush="#FF323337" Margin="20,0,0,0"  Visibility="Collapsed" Click="startRunBuild_Click"  >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/play.png" Width="15" Height="15"/>
                        <TextBlock Text="Run" Foreground="White" FontSize="14" Margin="5,0,5,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="startStopBuild" Padding="5" Background="Transparent" BorderBrush="#FF323337" Margin="20,0,0,0"  Visibility="Collapsed" Click="startStopBuild_Click"  >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/play.png" Width="15" Height="15"/>
                        <TextBlock Text="Stop" Foreground="White" FontSize="14" Margin="5,0,5,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="startCleanBuild" Padding="5" Background="Transparent" BorderBrush="#FF323337" Margin="20,0,0,0"  Visibility="Collapsed" Click="startCleanBuild_Click"  >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/play.png" Width="15" Height="15"/>
                        <TextBlock Text="Clean" Foreground="White" FontSize="14" Margin="5,0,5,0"/>
                    </StackPanel>
                </Button>


            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" x:Name="decoupledTabmenu" Visibility="Collapsed" Grid.Column="0" Grid.ColumnSpan="2">
                <TextBlock Text="Decouple Desktop Load :" FontSize="16" Foreground="#FFAEAEAE" Padding="10,3,10,3" Background="#FF1E1E1E"/>
                <StackPanel x:Name="wayposdataboxpath" Orientation="Horizontal"/>
                <StackPanel x:Name="kioskposdataboxpath" Orientation="Horizontal"/>
                <Button x:Name="decoupledstartCreateBuild" Padding="5" Background="Transparent" BorderBrush="#FF323337" Margin="20,0,0,0" Visibility="Visible" Click="decoupledstartCreateBuild_Click"   >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/play.png" Width="15" Height="15"/>
                        <TextBlock Text="Create" Foreground="White" FontSize="14" Margin="5,0,5,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="decoupledRunCreateBuild" Padding="5" Background="Transparent" BorderBrush="#FF323337" Margin="20,0,0,0" Visibility="Collapsed" Click="decoupledRunCreateBuild_Click"    >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/play.png" Width="15" Height="15"/>
                        <TextBlock Text="Run" Foreground="White" FontSize="14" Margin="5,0,5,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="decoupledStopCreateBuild" Padding="5" Background="Transparent" BorderBrush="#FF323337" Margin="20,0,0,0" Visibility="Collapsed" Click="decoupledStopCreateBuild_Click"  >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/play.png" Width="15" Height="15"/>
                        <TextBlock Text="Stop" Foreground="White" FontSize="14" Margin="5,0,5,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="decoupledCleanCreateBuild" Padding="5" Background="Transparent" BorderBrush="#FF323337" Margin="20,0,0,0" Visibility="Collapsed" Click="decoupledCleanCreateBuild_Click"   >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/play.png" Width="15" Height="15"/>
                        <TextBlock Text="Clean" Foreground="White" FontSize="14" Margin="5,0,5,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" x:Name="fileTabmenu" Visibility="Collapsed" Grid.Column="0" Grid.ColumnSpan="2">
                <TextBlock Text="File :" FontSize="16" Foreground="#FFAEAEAE" Padding="10,3,10,3" Background="#FF1E1E1E"/>
                <Button x:Name="openanyfile" Content="Open XML" Padding="8,0,8,0" Width="80" FontWeight="SemiBold" Height="30" Margin="10,0,0,0" Click="openanyfile_Click" Background="#FF383838" Foreground="#FFD6D6D6" BorderBrush="{x:Null}"/>
                <Button x:Name="savefile" Content="Save" Padding="5,0,5,0" Width="55" FontWeight="SemiBold" Height="30" Margin="10,0,0,0" Background="#FF006A95" BorderBrush="{x:Null}" Foreground="White" Click="savefile_Click" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>



        <Grid Grid.Row="2" x:Name="homeTabContent" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="21*"/>
            </Grid.ColumnDefinitions>


            <ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Column="0" Padding="10">
                <StackPanel   Margin="10" Orientation="Vertical" x:Name="buildNeedRun">

                </StackPanel>
            </ScrollViewer>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1" Margin="0,10,0,0" Grid.ColumnSpan="2">
                <StackPanel Orientation="Vertical" >


                    <StackPanel Orientation="Vertical"  x:Name="homeBuildContent" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button x:Name="foeSimulatorButton" Content="FOE Simulator" Width="130" Padding="10,6,10,6" Background="#FF383838" FontWeight="DemiBold" FontSize="13" BorderBrush="#FF4D4D4D" Foreground="#FFC5C5C5" HorizontalAlignment="Left" Margin="10" Click="foeSimulatorButton_Click"/>
                            <Button x:Name="offerSimulatorButton" Content="Offer Simulator" Width="135" Padding="10,6,10,6" Background="#FF383838" FontWeight="DemiBold" FontSize="13" BorderBrush="#FF4D4D4D" Foreground="#FFC5C5C5" HorizontalAlignment="Left" Margin="10" Click="offerSimulatorButton_Click"/>
                            <Button x:Name="cashlessSimulatorButton" Content="Cashless Simulator" Width="145" Padding="10,6,10,6" FontWeight="DemiBold" FontSize="13" Background="#FF383838" BorderBrush="#FF4D4D4D" Foreground="#FFC5C5C5" HorizontalAlignment="Left" Margin="10" Click="cashlessSimulatorButton_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" x:Name="foeSimulatorbox" Margin="20" Visibility="Collapsed">
                            <TextBlock Text="ProdInfo :" FontSize="16" FontWeight="DemiBold" TextAlignment="Left" Foreground="#FFA0A0A0" Margin="0,10,0,0"/>
                            <TextBox x:Name="prodinfoBox" Margin="0,15,0,0" MinHeight="200" FontSize="16" Background="Transparent" BorderBrush="#FF252525" BorderThickness="1.5" Foreground="#FF626262" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" CaretBrush="#FF797979" />
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" >
                                <Button x:Name="foeDoStore" Content="DoStore" Background="#FF383838" BorderBrush="#FF4D4D4D" Foreground="#FFC5C5C5" Padding="10,5,10,5" Click="foeDoStore_Click"/>
                                <Button x:Name="foeDoStoreStaging" Content="DoStoreStaging" Background="#FF383838" BorderBrush="#FF4D4D4D" Foreground="#FFC5C5C5" Padding="10,5,10,5" Margin="15,0,0,0" Click="foeDoStoreStaging_Click"/>
                                <Button x:Name="foeTransferFromStaging" Content="TransferFromStaging" Background="#FF383838" BorderBrush="#FF4D4D4D" Foreground="#FFC5C5C5" Padding="10,5,10,5" Margin="15,0,0,0" Click="foeTransferFromStaging_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" x:Name="offerSimulatorbox" Margin="20" Visibility="Collapsed">
                            <TextBlock Text="PromotionXML :" FontSize="16" FontWeight="DemiBold" TextAlignment="Left" Foreground="#FFA0A0A0" Margin="0,10,0,0"/>
                            <TextBox x:Name="promotioninfoBox" Margin="0,15,0,0" MinHeight="200" FontSize="16" Background="Transparent" BorderBrush="#FF252525" BorderThickness="1.5" Foreground="#FF626262" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" CaretBrush="#FF797979" />
                            <Button x:Name="runOfferSimulator" Content="Run Offer Simulator" Background="#FF383838" BorderBrush="#FF4D4D4D" Foreground="#FFC5C5C5" Padding="10,5,10,5" Margin="0,15,0,20" Click="runOfferSimulator_Click" />
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>


        <Grid Grid.Row="2" x:Name="decoupleTabContent" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="237*"/>
                <ColumnDefinition Width="643*"/>
            </Grid.ColumnDefinitions>



            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Hidden"  Padding="10" >

                <StackPanel   Orientation="Vertical" x:Name="kioskbuildNeedRun">

                </StackPanel>
            </ScrollViewer>


            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Hidden" Padding="10" >
                <StackPanel    Orientation="Vertical" x:Name="waybuildNeedRun">

                </StackPanel>
            </ScrollViewer>


        </Grid>
        <Grid Grid.Row="2" x:Name="fileTabContent" Visibility="Collapsed">


            <RichTextBox Name="richTextBox"
                         
                         Margin="10"
                 IsReadOnly="False"
                 Background="Transparent"
                 BorderBrush="Transparent"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 Padding="10" Foreground="#FFCECECE"
                 />


        </Grid>
    </Grid>
</Window>
